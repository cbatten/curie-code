//========================================================================
// Test Unit Tests
//========================================================================

#include <Curie.h>
#include <Wire.h>
#include <SPI.h>

//------------------------------------------------------------------------
// test_check_a
//------------------------------------------------------------------------

void test_check_a()
{
  TEST_CHECK( 1 == 1 );
  TEST_CHECK( 1 != 2 );
}

//------------------------------------------------------------------------
// test_check_b
//------------------------------------------------------------------------

void test_check_b()
{
  TEST_CHECK( 3 == 3 );
  TEST_CHECK( 3 != 4 );
}

//------------------------------------------------------------------------
// test_prompt_yn
//------------------------------------------------------------------------

void test_prompt_yn()
{
  TEST_PROMPT_YN("Is the sky blue?");
}

//------------------------------------------------------------------------
// test_prompt_wait
//------------------------------------------------------------------------

void test_prompt_wait()
{
  TEST_PROMPT_WAIT("Do something");
  TEST_CHECK( String("red") == String("red")  );
  TEST_CHECK( String("red") != String("blue") );
}

//------------------------------------------------------------------------
// Setup
//------------------------------------------------------------------------

CurieTest tests("test_test");

void setup()
{
  tests.begin();
  tests.add( TEST_CASE( test_check_a     ) );
  tests.add( TEST_CASE( test_check_b     ) );
  tests.add( TEST_CASE( test_prompt_yn   ) );
  tests.add( TEST_CASE( test_prompt_wait ) );
}

//------------------------------------------------------------------------
// Loop
//------------------------------------------------------------------------

void loop()
{
  tests.run();
}

